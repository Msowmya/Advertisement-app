<%= form_for(@ad) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description  %>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :contact_details %>
      <%= f.text_area :contact_details %>
    </p>
    <p>
    <%= f.submit "Post" %>
<% end %>

