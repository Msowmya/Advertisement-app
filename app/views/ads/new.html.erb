<%= form_for :ad, url: ads_path do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description  %>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :contact_details %>
      <%= f.text_area :contact_details %>
    </p>
    <p>
      <%= f.submit "Post Advertisement" %>
    </p>
<% end %>

